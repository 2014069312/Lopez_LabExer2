<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.lopez_labexer2.MainActivity">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Username: "
        android:textColor="black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tv_username"
        android:layout_toRightOf="@+id/tv_username" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Password: "
        android:textColor="black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tv_password"
        android:layout_toRightOf="@+id/tv_password"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_sharedPreferences"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#1995ad"
        android:fontFamily="sans-serif-condensed"
        android:onClick="saveSharedPreference"
        android:text="Shared Preferences"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_internalStorage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sharedPreferences"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="#1995ad"
        android:fontFamily="sans-serif-condensed"
        android:onClick="saveInternalStorage"
        android:text="Internal Storage"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_internalStorage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#bcbabe"
        android:elevation="0dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="goToNext"
        android:text="NEXT"
        android:textColor="#ffffff"
        android:textStyle="bold|italic" />

</RelativeLayout>
